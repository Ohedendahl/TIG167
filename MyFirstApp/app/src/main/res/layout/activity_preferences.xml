<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preferences">

    <TextView
        android:id="@+id/info_settings"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Välj din plats"
        android:textSize="30sp" />

    <!--RadioButton
        android:id="@+id/radioButton"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="73dp"
        android:checked="true"
        android:text="Göteborg"
        android:textSize="22sp" /-->

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_settings"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/updates_text"
        android:layout_width="347dp"
        android:layout_height="86dp"
        android:layout_alignStart="@+id/spinner2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-11dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="120dp"
        android:text="Välj vilka uppdateringar du vill ha"
        android:textSize="30sp" />


    <CheckBox
        android:id="@+id/press"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/updates_text"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:text="Pressmeddelanden"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/polisen"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/press"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="Polisen"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/trafikinfo"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/polisen"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="Trafikinfo"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/tidtabell"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/trafikinfo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:text="Tidtabeller"
        android:textSize="22sp" />


</RelativeLayout>